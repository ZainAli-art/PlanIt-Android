<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="editTextStyle">@style/AppTheme.EditText</item>
        <item name="android:spinnerStyle">@style/AppSpinnerStyle</item>
    </style>

    <style name="AppTheme.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/background_edit_text</item>
    </style>

    <style name="HomeFragmentItemHeading">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TabButtonStyle">
        <item name="android:background">@drawable/background_tab_button</item>
        <item name="android:textColor">@drawable/tab_button_text_color</item>
    </style>

    <style name="AppSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/background_edit_text</item>
    </style>

</resources>